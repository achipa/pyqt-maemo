
all:
	@(cd qpy; $(MAKE))
	@(cd QtCore; $(MAKE))
	@(cd QtGui; $(MAKE))
	@(cd QtMaemo5; $(MAKE))
	@(cd QtMultimedia; $(MAKE))
	@(cd QtNetwork; $(MAKE))
	@(cd QtOpenGL; $(MAKE))
	@(cd QtScript; $(MAKE))
	@(cd QtScriptTools; $(MAKE))
	@(cd QtSql; $(MAKE))
	@(cd QtSvg; $(MAKE))
	@(cd QtTest; $(MAKE))
	@(cd QtWebKit; $(MAKE))
	@(cd QtXml; $(MAKE))
	@(cd QtXmlPatterns; $(MAKE))
	@(cd phonon; $(MAKE))
	@(cd Qt; $(MAKE))
	@(cd dbus; $(MAKE))
	@(cd pyuic; $(MAKE))
	@(cd pylupdate; $(MAKE))
	@(cd pyrcc; $(MAKE))

install:
	@(cd qpy; $(MAKE) install)
	@(cd QtCore; $(MAKE) install)
	@(cd QtGui; $(MAKE) install)
	@(cd QtMaemo5; $(MAKE) install)
	@(cd QtMultimedia; $(MAKE) install)
	@(cd QtNetwork; $(MAKE) install)
	@(cd QtOpenGL; $(MAKE) install)
	@(cd QtScript; $(MAKE) install)
	@(cd QtScriptTools; $(MAKE) install)
	@(cd QtSql; $(MAKE) install)
	@(cd QtSvg; $(MAKE) install)
	@(cd QtTest; $(MAKE) install)
	@(cd QtWebKit; $(MAKE) install)
	@(cd QtXml; $(MAKE) install)
	@(cd QtXmlPatterns; $(MAKE) install)
	@(cd phonon; $(MAKE) install)
	@(cd Qt; $(MAKE) install)
	@(cd dbus; $(MAKE) install)
	@(cd pyuic; $(MAKE) install)
	@(cd pylupdate; $(MAKE) install)
	@(cd pyrcc; $(MAKE) install)
	@test -d $(DESTDIR)/usr/lib/python2.5/site-packages/PyQt4 || mkdir -p $(DESTDIR)/usr/lib/python2.5/site-packages/PyQt4
	cp -f /home/maemo/python-qt4-4.7/__init__.py $(DESTDIR)/usr/lib/python2.5/site-packages/PyQt4/__init__.py
	cp -f pyqtconfig.py $(DESTDIR)/usr/lib/python2.5/site-packages/PyQt4/pyqtconfig.py

clean:
	@(cd qpy; $(MAKE) clean)
	@(cd QtCore; $(MAKE) clean)
	@(cd QtGui; $(MAKE) clean)
	@(cd QtMaemo5; $(MAKE) clean)
	@(cd QtMultimedia; $(MAKE) clean)
	@(cd QtNetwork; $(MAKE) clean)
	@(cd QtOpenGL; $(MAKE) clean)
	@(cd QtScript; $(MAKE) clean)
	@(cd QtScriptTools; $(MAKE) clean)
	@(cd QtSql; $(MAKE) clean)
	@(cd QtSvg; $(MAKE) clean)
	@(cd QtTest; $(MAKE) clean)
	@(cd QtWebKit; $(MAKE) clean)
	@(cd QtXml; $(MAKE) clean)
	@(cd QtXmlPatterns; $(MAKE) clean)
	@(cd phonon; $(MAKE) clean)
	@(cd Qt; $(MAKE) clean)
	@(cd dbus; $(MAKE) clean)
	@(cd pyuic; $(MAKE) clean)
	@(cd pylupdate; $(MAKE) clean)
	@(cd pyrcc; $(MAKE) clean)
